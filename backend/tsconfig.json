{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "DOM"
    ],
    "typeRoots": [
      // "./node_modules/@types",
      "./src/typings",
      "../sdk/typings",
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "./src/**/*",
    "../sdk/typings",
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}